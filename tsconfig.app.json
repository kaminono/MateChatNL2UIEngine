{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/env.d.ts",
    "playground/**/*",
    "playground/**/*.vue",
    "packages/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*", "packages/create-matechat/templates/**/*", "packages/components-ng/**/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@matechat/playground/*": ["./playground/*"],
      "@matechat/core/*": ["./packages/components/*"],
      "@matechat/core": ["./packages/components/index.ts"]
    }
  }
}
