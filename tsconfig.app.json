{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/env.d.ts",
    "playground/**/*",
    "playground/**/*.vue",
    "packages/components/**/*.vue",
    "packages/components/**/*.ts",
    "packages/components/**/*.tsx"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "packages/create-matechat/templates/**/*",
    "packages/create-matechat/src/**/*",
    "packages/components-ng/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@matechat/playground/*": ["./playground/*"],
      "@matechat/core/*": ["./packages/components/*"]
    },
    "skipLibCheck": true
  }
}
